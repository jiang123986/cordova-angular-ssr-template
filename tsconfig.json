{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@lib/*": [
        "./src/lib/*"
      ],
      "@shared/*": [
        "./src/app/shared/*"
      ],
      "@core/*": [
        "./src/app/core/*"
      ],
      "@environments/*": [
        "./src/environments/*"
      ],
      "@type/*": [
        "./src/@types/*"
      ]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}